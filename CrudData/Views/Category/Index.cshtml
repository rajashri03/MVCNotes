@model IEnumerable<CrudData.Models.Category>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>CategoryList</h2>
        </div>
        <div class="col-6">
            <a asp-action="Create" asp-controller="Category" class="btn btn-primary">Create New Category</a>
        </div>
    </div>
    <br /><br />
    @if(Model.Count()>0)
    {
        <table class="table table-bordered" style="width=100%">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Display Order</th>
                    <th>Edit/Delete</th>
                </tr>
            </thead>
            <tbody>
               @foreach(var obj in Model) 
               {
                   <tr>
                       <td>@obj.CategoryName</td>
                       <td>@obj.DisplayOrder</td>
                        <td>
                            <a class="btn btn-info" asp-controller="Category" asp-route-id="@obj.Id" asp-action="Edit">Edit</a>
                            <a class="btn btn-danger" asp-controller="Category" asp-route-id="@obj.Id" asp-action="Delete">Delete</a>
                        </td>
                   </tr>
               }
            </tbody>
        </table>
    }
    else
    {
        <p>No category exits</p>
    }
</div>

