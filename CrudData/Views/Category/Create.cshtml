@model CrudData.Models.Category

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
        <h1 class="text-info pl-3">Add category</h1>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="CategoryName"></label>
            </div>
            <div class="col-8">
                <input type="text" asp-for="CategoryName" class="form-control">
                </div>
              
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="DisplayOrder"></label>
            </div>
            <div class="col-8">
                <input type="text" asp-for="DisplayOrder" class="form-control">
                </div>
              
        </div>
        <div class="form-group row">
            <div class="col-8 offset-4 row">
                <div class="col">
                    <button type="submit" class="btn btn-danger w-100">Create</button>
                </div>
                  <div class="col">
                    <a asp-action="Index" class="btn btn-primary">Back</a>
             </div>
             </div>
          
        </div>
    </div>

</form>

